---
import CustomSection from "@builders/custom-section/CustomSection.astro";
import Heading from "@core-elements/heading/Heading.astro";
import Image from "@core-elements/image/Image.astro";
import SimpleText from "@core-elements/simple-text/SimpleText.astro";
import Text from "@core-elements/text/Text.astro";
import ButtonGroup from "@wrappers/button-group/ButtonGroup.astro";

const {
  eyebrow = "",
  heading = "",
  subtext = "",
  buttonSections = [],
  imageSource = "",
  imageAlt = "",
  colorScheme = "inherit",
  backgroundColor,
  class: className,
  _component,
  ...htmlAttributes
} = Astro.props;
---

<CustomSection
  class:list={["hero-wide", className]}
  maxContentWidth=""
  paddingHorizontal=""
  paddingVertical=""
  colorScheme={colorScheme}
  backgroundColor={backgroundColor}
  {...htmlAttributes}
>
  <div class="hero-wide-grid">
    <div class="hero-wide-text">
      <div class="hero-wide-text-inner">
        <SimpleText alignX="left" class="eyebrow" data-prop="eyebrow">
          {eyebrow}
        </SimpleText>
        <Heading level="h1" size="2xl" alignX="left" data-prop="heading">
          {heading}
        </Heading>
        <Text alignX="left" class="subtext" data-prop="subtext" text={subtext} />
        <ButtonGroup class="buttons" buttonSections={buttonSections} alignX="left" />
      </div>
    </div>
    <div class="hero-wide-image">
      <Image
        source={imageSource}
        alt={imageAlt}
        priority={true}
        editable={true}
        data-prop-src="imageSource"
        data-prop-alt="imageAlt"
      />
    </div>
  </div>
</CustomSection>

<style lang="pcss" is:global>
  @layer page-sections {
    .hero-wide {
      padding-bottom: var(--spacing-xl);

      @media (min-width: 769px) {
        padding-bottom: var(--spacing-3xl);
      }
    }

    .hero-wide .hero-wide-grid {
      display: grid;
      grid-template-columns: 1fr;
      min-height: 50vh;

      .hero-wide-image {
        order: -1;

        .image {
          margin-top: 0;
          aspect-ratio: 4 / 3;
          overflow: hidden;

          img {
            height: 100%;
            object-fit: cover;
          }
        }
      }

      .hero-wide-text {
        display: flex;
        align-items: center;
        padding: var(--spacing-2xl) var(--spacing-lg);
      }

      .hero-wide-text-inner {
        max-width: 540px;
      }

      .subtext p {
        font-size: var(--font-size-lg);
      }

      @media (min-width: 769px) {
        grid-template-columns: 1fr 1fr;
        min-height: 70vh;

        .hero-wide-image {
          order: 0;
          position: relative;

          .image {
            position: absolute;
            inset: 0;
            aspect-ratio: auto;

            picture {
              height: 100%;
            }

            img {
              width: 100%;
              height: 100%;
              object-fit: cover;
            }
          }
        }

        .hero-wide-text {
          padding: var(--spacing-4xl) var(--spacing-2xl);
        }

        .hero-wide-text-inner {
          margin-left: auto;
          margin-right: var(--spacing-xl);
        }
      }
    }
  }
</style>
